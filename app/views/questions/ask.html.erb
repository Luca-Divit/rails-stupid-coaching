    <label for="question" class="form-label">What do you want to tell to the coach?</label>
  </div>
  <div class="mb-3">
    <input type="text" name="question" value="<%= params[:member] %>" placeholder="Type here.." class="rounded">
    <input type="submit" value="Ask!" class="btn btn-primary">
  </div>
</form>
